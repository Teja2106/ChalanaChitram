<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('head.ejs'); %>
</head>
<body>
    <div class="container">
        <h1>Chalanachitram Scanner</h1>
        <script src="./scannerDependency.js"></script>
        <div style="text-align: center;">
            <div id="reader" style="width: auto; height: auto;"></div>
            <div id="show">
                <form id="form" action="/ccqr2024" method="post">
                    <input id="result" type="text" name="hashText" hidden style="width: 80%; margin: 0 auto; font-size: 24px;">
                    <br>
                    <br>
                    <button type="submit" class="btn btn-primary" id="submitButton" disabled>Show Profile</button>
                    <br>
                    <br>
                    <% if (error) { %>
                        <div class="alert alert-danger">
                            <p><%= error %></p>
                        </div>
                    <% } %>
                </form>
            </div>
        </div>

        <div id="result">
            <% if (user) { %>
                <h2>User Details</h2>
                <ul>
                    <li>Name: <%= user.name %></li>
                    <li>Email: <%= user.email %></li>
                    <li>Mobile: <%= user.mobile %></li>
                    <li>Accommodation Type: <%= user.acc_type %></li>
                </ul>
                <form action="/check-in" method="POST">
                    <input type="hidden" name="hashText" value="<%= user.hash_mail %>">
                    <button type="submit">Check In</button>
                </form>
            <% } else { %>
                <% if (error) { %>
                    <p>Error: <%= error %></p>
                <% } %>
            <% } %>
        </div>
    </div>
    <script>
        const html5Qrcode = new Html5Qrcode('reader');
        const qrCodeSuccessCallback = (decodedText, decodedResult)=>{
            if(decodedText){
                document.getElementById('show').style.display = 'block';
                document.getElementById('result').value = decodedText;
                document.getElementById('submitButton').disabled = false;
                document.getElementById('submitButton').classList.add('btn btn-success');
                document.getElementById('submitButton').classList.remove('btn btn-primary');
            }
        }
        const config = {fps:10, qrbox:{width:250, height:250}}
        html5Qrcode.start({facingMode:"environment"}, config, qrCodeSuccessCallback);
    </script>

    <!-- Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>
